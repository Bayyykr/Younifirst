<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="@drawable/custom_bbg_transparant_border"
    android:layout_marginTop="10dp"
    android:padding="10dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/hari"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Hari 1"
            android:textColor="#FFFFFF"
            android:textSize="16sp"
            android:fontFamily="@font/is_sb"/>

        <ImageView
            android:id="@+id/close"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:src="@drawable/icon_silang_kecil"
            android:layout_gravity="center_vertical"
            android:clickable="true"/>
    </LinearLayout>

    <com.naufal.younifirst.custom.CustomEditText
        android:id="@+id/et_tanggalEventHariKe1"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_marginTop="10dp"
        android:textColor="@color/white"
        android:textColorHint="#66FFFFFF"
        android:inputType="textCapSentences" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <com.naufal.younifirst.custom.CustomEditText
            android:id="@+id/et_waktuMulai"
            android:layout_width="0dp"
            android:layout_height="60dp"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="10dp"
            android:layout_weight="1"
            android:textColor="@color/white"
            android:textColorHint="#66FFFFFF"
            android:inputType="textCapSentences"/>

        <com.naufal.younifirst.custom.CustomEditText
            android:id="@+id/et_waktuSelesai"
            android:layout_width="0dp"
            android:layout_height="60dp"
            android:layout_marginTop="10dp"
            android:layout_weight="1"
            android:textColor="@color/white"
            android:textColorHint="#66FFFFFF"
            android:inputType="textCapSentences"/>
    </LinearLayout>

</LinearLayout>
