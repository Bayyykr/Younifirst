<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/primary_color">

    <LinearLayout
        android:id="@+id/header_container"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="40dp"
        android:layout_marginHorizontal="10dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:padding="10dp">

        <TextView
            android:id="@+id/back_to_mainactivity"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:drawableStart="@drawable/panah_kiri" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Postingan Kehilangan"
            android:gravity="center_horizontal"
            android:textColor="@color/white"
            android:textSize="18sp"
            android:fontFamily="@font/is_sb" />
    </LinearLayout>

    <ScrollView
        android:id="@+id/scroll_content"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintTop_toBottomOf="@id/header_container"
        app:layout_constraintBottom_toTopOf="@id/button_container"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:padding="10dp">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_margin="10dp">

                <EditText
                    android:id="@+id/et_deskripsi"
                    style="@style/EditTextLowerUnderline"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Apa yang anda kehilangan?"
                    android:textColorHint="#80ffffff"
                    android:textColor="@color/white"
                    android:textSize="14sp"
                    android:layout_marginTop="10dp"
                    android:fontFamily="@font/is_r"
                    android:background="?android:attr/editTextBackground" />

                <!-- Container untuk foto preview -->
                <LinearLayout
                    android:id="@+id/photo_container"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_marginTop="20dp">

                    <!-- TextView untuk memilih foto -->
                    <TextView
                        android:id="@+id/tv_select_photo"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Foto/Video"
                        android:textColor="#FFFFFF"
                        android:textSize="14sp"
                        android:drawableStart="@drawable/icon_camera"
                        android:drawableEnd="@drawable/icon_panah_kanan"
                        android:drawablePadding="10dp"
                        android:paddingVertical="12dp" />

                    <!-- Preview gambar yang dipilih -->
                    <LinearLayout
                        android:id="@+id/photo_preview_container"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_vertical"
                        android:visibility="gone"
                        android:layout_marginTop="10dp"
                        android:padding="8dp"
                        android:background="@drawable/image_preview_bg">

                        <ImageView
                            android:id="@+id/iv_photo_preview"
                            android:layout_width="60dp"
                            android:layout_height="60dp"
                            android:scaleType="centerCrop"
                            android:layout_marginEnd="12dp"
                            android:background="@drawable/image_placeholder_border" />

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:orientation="vertical">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Foto terpilih"
                                android:textColor="#FFFFFF"
                                android:textSize="12sp"
                                android:fontFamily="@font/is_m" />

                            <TextView
                                android:id="@+id/tv_photo_name"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="foto_barang.jpg"
                                android:textColor="#80FFFFFF"
                                android:textSize="11sp"
                                android:fontFamily="@font/is_r"
                                android:layout_marginTop="4dp" />
                        </LinearLayout>

                        <Button
                            android:id="@+id/btn_change_photo"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Ganti"
                            android:textSize="12sp"
                            android:paddingHorizontal="16dp"
                            android:paddingVertical="6dp"
                            android:background="@drawable/button_outline_small"
                            android:textColor="@color/btn_fabmenu"
                            android:fontFamily="@font/is_m" />

                        <ImageView
                            android:id="@+id/btn_remove_photo"
                            android:layout_width="24dp"
                            android:layout_height="24dp"
                            android:src="@drawable/icon_silang_kecil"
                            android:layout_marginStart="8dp"
                            app:tint="#FF6B6B" />
                    </LinearLayout>
                </LinearLayout>

                <TextView
                    android:id="@+id/tambah_lokasi_textview"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Tambahkan Lokasi Kehilangan"
                    android:drawableEnd="@drawable/icon_panah_kanan"
                    android:textColor="#FFFFFF"
                    android:textSize="14sp"
                    android:layout_marginTop="20dp"
                    android:drawableStart="@drawable/icon_lokasi"
                    android:drawablePadding="10dp"
                    android:paddingVertical="12dp" />

                <TextView
                    android:id="@+id/tambah_telepon_textview"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Tambahkan Nomor"
                    android:textColor="#FFFFFF"
                    android:textSize="14sp"
                    android:layout_marginTop="20dp"
                    android:drawableStart="@drawable/icon_telepon"
                    android:drawableEnd="@drawable/icon_panah_kanan"
                    android:drawablePadding="10dp"
                    android:paddingVertical="12dp" />

                <TextView
                    android:id="@+id/tambah_email_textview"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Tambahkan Email"
                    android:textColor="#FFFFFF"
                    android:textSize="14sp"
                    android:layout_marginTop="20dp"
                    android:drawableStart="@drawable/icon_email"
                    android:drawableEnd="@drawable/icon_panah_kanan"
                    android:drawablePadding="10dp"
                    android:paddingVertical="12dp" />
            </LinearLayout>
        </LinearLayout>
    </ScrollView>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/button_container"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:paddingBottom="20dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <Button
            android:id="@+id/btn_draft"
            android:layout_width="0dp"
            android:layout_height="56dp"
            android:background="@drawable/custom_button_rounded_border"
            android:text="Simpan Draf"
            android:fontFamily="@font/is_bold"
            android:textSize="18dp"
            android:textColor="@color/white"
            android:textAllCaps="false"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toStartOf="@id/btn_share"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintWidth_percent="0.45" />

        <Button
            android:id="@+id/btn_share"
            android:layout_width="0dp"
            android:layout_height="56dp"
            android:background="@drawable/custom_button_rounded"
            android:text="Bagikan"
            android:fontFamily="@font/is_bold"
            android:textSize="18dp"
            android:textColor="@color/white"
            android:textAllCaps="false"
            app:layout_constraintStart_toEndOf="@id/btn_draft"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintWidth_percent="0.45" />
    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.constraintlayout.widget.ConstraintLayout>