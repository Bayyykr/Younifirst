<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/primary_color">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/header_group"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="25dp"
        android:paddingVertical="8dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <ImageButton
            android:id="@+id/back_to_mainactivity"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/panah_kiri"
            android:padding="8dp"
            android:clickable="true"
            android:focusable="true"
            android:contentDescription="Kembali"
            android:background="@android:color/transparent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginStart="16dp" />

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/profile_group"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toEndOf="@id/back_to_mainactivity"
            app:layout_constraintEnd_toStartOf="@id/flag2"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent">

            <ImageView
                android:id="@+id/img_header"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:contentDescription="Header Image"
                android:scaleType="centerCrop"
                android:src="@drawable/gambar_kucing_pusing"
                android:background="@drawable/rounded_image"
                android:clipToOutline="true"
                android:layout_marginLeft="10dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent" />

            <LinearLayout
                android:id="@+id/textGroup"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:gravity="center_vertical"
                android:paddingStart="10dp"
                app:layout_constraintStart_toEndOf="@id/img_header"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="@id/img_header"
                app:layout_constraintBottom_toBottomOf="@id/img_header">

                <TextView
                    android:id="@+id/tvTitle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Kerja"
                    android:textSize="18sp"
                    android:textColor="@color/white"
                    android:fontFamily="@font/is_sb" />

                <TextView
                    android:id="@+id/tvSub"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Kelompok 4"
                    android:textSize="12sp"
                    android:textColor="#A3A3A3"
                    android:fontFamily="@font/is_r" />
            </LinearLayout>
        </androidx.constraintlayout.widget.ConstraintLayout>

        <ImageButton
            android:id="@+id/flag2"
            android:layout_width="wrap_content"
            android:layout_height="35dp"
            android:src="@drawable/icon_lainnya"
            android:background="@android:color/transparent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginEnd="16dp" />
    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/chat_background"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:background="@drawable/bg_chat"
        app:layout_constraintTop_toBottomOf="@id/header_group"
        app:layout_constraintBottom_toBottomOf="parent">

        <ScrollView
            android:id="@+id/scroll_chat_container"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:fillViewport="true"
            android:clipToPadding="false"
            android:paddingHorizontal="12dp"
            android:paddingTop="10dp"
            android:paddingBottom="16dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toTopOf="@id/send_container"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent">

            <LinearLayout
                android:id="@+id/chat_list_container"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:gravity="start">
                <include layout="@layout/custom_bubble_chat_forum_anggota" />
                <include layout="@layout/custom_bubble_chat_forum_anggota_2" />
                <include layout="@layout/custom_bubble_chat_forum_upload_file_pdf" />
                <include layout="@layout/custom_bubble_chat_forum_anggota_3" />
            </LinearLayout>
        </ScrollView>

        <LinearLayout
            android:id="@+id/send_container"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingHorizontal="12dp"
            android:paddingVertical="8dp"
            android:background="@android:color/transparent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent">

            <ImageView
                android:id="@+id/preview_image"
                android:layout_width="match_parent"
                android:layout_height="160dp"
                android:scaleType="centerCrop"
                android:layout_gravity="center"
                android:layout_marginBottom="10dp"
                android:background="@drawable/rounded_image"
                android:visibility="gone" />

            <LinearLayout
                android:id="@+id/reply_container"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="8dp"
                android:background="#262626"
                android:visibility="gone"
                android:layout_marginBottom="8dp"
                android:gravity="center_vertical">

                <TextView
                    android:id="@+id/reply_text"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:textColor="@color/white"
                    android:textSize="12sp"
                    android:maxLines="2"
                    android:ellipsize="end" />

                <ImageView
                    android:id="@+id/reply_cancel"
                    android:layout_width="18dp"
                    android:layout_height="18dp"
                    android:src="@drawable/icon_silang_kecil"
                    android:padding="4dp"
                    android:background="@android:color/transparent"
                    />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/input_row"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical">

                <ImageButton
                    android:id="@+id/btn_upload"
                    android:layout_width="36dp"
                    android:layout_height="36dp"
                    android:background="@drawable/custom_button_chat_forum"
                    android:src="@drawable/icon_upload_file"
                    android:padding="6dp"
                    android:layout_marginRight="10dp"
                    android:contentDescription="Upload file" />

                <EditText
                    android:id="@+id/input_message"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="@drawable/custom_textfield_chat_forum"
                    android:hint="Ketik Pesan"
                    android:paddingHorizontal="16dp"
                    android:paddingVertical="14dp"
                    android:textColor="@color/white"
                    android:textColorHint="#A3A3A3"
                    android:fontFamily="@font/is_r"
                    android:inputType="textMultiLine"
                    android:maxLines="3" />

                <ImageButton
                    android:id="@+id/btn_send"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:src="@drawable/icon_send_chat"
                    android:background="@drawable/custom_button_chat_forum"
                    android:layout_marginStart="8dp"
                    android:contentDescription="Kirim pesan" />
            </LinearLayout>
        </LinearLayout>
    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.constraintlayout.widget.ConstraintLayout>
