<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/item_chat_bubble"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="@drawable/custom_chat_forum"
    android:padding="10dp"
    android:layout_marginEnd="20dp"
    android:layout_marginBottom="8dp"
    android:layout_marginStart="8dp">

    <LinearLayout
        android:id="@+id/chat_bubble_header"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginBottom="4dp"
        android:gravity="center_vertical">

        <ImageView
            android:id="@+id/chat_bubble_avatar"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_gravity="start|center_vertical"
            android:src="@drawable/gambar_profil_2"
            android:background="@drawable/rounded_image"
            android:clipToOutline="true"
            android:contentDescription="Avatar"
            android:layout_marginEnd="6dp" />

        <LinearLayout
            android:id="@+id/chat_bubble_sub"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center_vertical">

            <TextView
                android:id="@+id/chat_bubble_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Elliot"
                android:textColor="@color/white"
                android:textSize="16sp"
                android:fontFamily="@font/is_m" />

        </LinearLayout>
    </LinearLayout>
    <LinearLayout
        android:id="@+id/chat_file_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:clipToOutline="true">

        <ImageView
            android:id="@+id/chat_file_preview"
            android:layout_width="match_parent"
            android:layout_height="140dp"
            android:scaleType="centerCrop"
            android:src="@drawable/gambar_matkul_kjk"
            android:background="@drawable/custom_rounded_image"
            android:clipToOutline="true"
            android:layout_marginTop="5dp"
            android:contentDescription="File Preview" />

        <LinearLayout
            android:id="@+id/chat_file_info"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="10dp"
            android:background="@drawable/custom_bg_file_pdf">

            <TextView
                android:id="@+id/chat_file_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="KJK.pdf"
                android:textColor="@color/white"
                android:textSize="14sp"
                android:fontFamily="@font/is_m" />

            <TextView
                android:id="@+id/chat_file_detail"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="10 halaman · 276 kB · PDF"
                android:textColor="#A0FFFFFF"
                android:textSize="12sp"
                android:fontFamily="@font/is_r" />
        </LinearLayout>
    </LinearLayout>

    <TextView
        android:id="@+id/chat_bubble_time"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:text="10:45"
        android:textColor="#A3A3A3"
        android:gravity="end"
        android:textSize="10sp"
        android:fontFamily="@font/is_r"
        android:layout_marginTop="4dp" />
</LinearLayout>
