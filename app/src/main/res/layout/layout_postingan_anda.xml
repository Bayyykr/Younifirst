<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#0A1124">

    <!-- Header -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:layout_marginHorizontal="16dp"
        android:layout_marginTop="25dp">

        <ImageView
            android:id="@+id/back_to_mainactivity"
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:src="@drawable/panah_kiri"
            android:padding="8dp"
            android:clickable="true"
            android:focusable="true"
            android:contentDescription="Kembali" />

        <TextView
            android:id="@+id/tv_title_postingan"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="Postingan Anda"
            android:gravity="center"
            android:textColor="@color/white"
            android:textSize="18sp"
            android:fontFamily="@font/is_sb"/>

        <!-- Spacer untuk balance -->
        <View
            android:layout_width="50dp"
            android:layout_height="50dp"/>
    </LinearLayout>

    <!-- Tab Navigation -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="#1A2340"
        android:layout_marginTop="10dp">

        <TextView
            android:id="@+id/tab_lostfound"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Lost&amp;Found"
            android:gravity="center"
            android:paddingVertical="15dp"
            android:textColor="@color/white"
            android:textSize="14sp"
            android:fontFamily="@font/is_sb"
            android:background="?attr/selectableItemBackground"/>

        <View
            android:layout_width="1dp"
            android:layout_height="20dp"
            android:background="#2D3748"
            android:layout_gravity="center_vertical"/>

        <TextView
            android:id="@+id/tab_tim"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Tim"
            android:gravity="center"
            android:paddingVertical="15dp"
            android:textColor="#858891"
            android:textSize="14sp"
            android:fontFamily="@font/is_sb"
            android:background="?attr/selectableItemBackground"/>
    </LinearLayout>

    <!-- Content Area -->
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">

        <!-- Loading -->
        <ProgressBar
            android:id="@+id/progress_bar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:visibility="gone"/>

        <!-- RecyclerView -->
        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/recyclerView_postingan"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:visibility="visible"/>

        <!-- Empty State -->
        <LinearLayout
            android:id="@+id/layout_empty"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:gravity="center"
            android:visibility="gone"
            android:padding="16dp">

            <ImageView
                android:layout_width="120dp"
                android:layout_height="120dp"
                android:src="@drawable/icon_bantuan"
                android:contentDescription="Tidak ada postingan"/>

            <TextView
                android:id="@+id/tv_empty_message"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Belum ada postingan"
                android:textColor="@color/white"
                android:textSize="16sp"
                android:layout_marginTop="16dp"
                android:fontFamily="@font/is_sb"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Mulai buat postingan pertama Anda"
                android:textColor="#858891"
                android:textSize="14sp"
                android:layout_marginTop="8dp"
                android:fontFamily="@font/is_r"/>

            <Button
                android:id="@+id/btn_buat_postingan"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="+ Buat Postingan"
                android:layout_marginTop="24dp"
                android:paddingHorizontal="24dp"
                android:paddingVertical="12dp"
                android:background="@drawable/custom_button_rounded"
                android:textColor="@color/white"
                android:textSize="14sp"
                android:fontFamily="@font/is_sb"/>
        </LinearLayout>
    </FrameLayout>
</LinearLayout>