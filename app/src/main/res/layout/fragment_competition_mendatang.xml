<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/container_mendatang"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#0A1124">

    <androidx.cardview.widget.CardView
        android:id="@+id/card_mendatang"
        android:layout_width="240dp"
        android:layout_height="300dp"
        android:layout_gravity="start"
        android:layout_marginBottom="10dp"
        app:cardCornerRadius="16dp"
        app:cardUseCompatPadding="false"
        app:cardPreventCornerOverlap="true"
        app:cardElevation="0dp"
        android:clipToOutline="true"
        app:cardBackgroundColor="#121A2C"
        android:layout_marginRight="10dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <!-- Poster -->
            <ImageView
                android:id="@+id/img_poster_mendatang"
                android:layout_width="match_parent"
                android:layout_height="160dp"
                android:background="@drawable/rounded_top_only"
                android:src="@drawable/tryposter"
                android:scaleType="centerCrop"
                android:adjustViewBounds="true"
                android:clipToOutline="true" />

            <!-- Content Container -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:orientation="vertical"
                android:padding="10dp">

                <!-- Status & Scope -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/text_biaya"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Berbayar"
                            android:textColor="@color/white"
                            android:fontFamily="@font/is_r"
                            android:textSize="10sp" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text=" â€¢ "
                            android:textColor="@color/white"
                            android:fontFamily="@font/is_r"
                            android:textSize="10sp" />

                        <TextView
                            android:id="@+id/text_scope"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:fontFamily="@font/is_r"
                            android:text="Nasional"
                            android:textColor="@color/white"
                            android:textSize="10sp" />
                    </LinearLayout>

                    <!-- Participants -->
                    <LinearLayout
                        android:id="@+id/layout_participant_mendatang"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="wrap_content"
                        android:gravity="end"
                        android:orientation="horizontal">

                        <ImageView
                            android:id="@+id/icon_lomba_type_kelompok"
                            android:layout_width="13dp"
                            android:layout_height="8dp"
                            android:src="@drawable/icon_orang"
                            android:layout_gravity="center" />

                        <ImageView
                            android:id="@+id/icon_lomba_type_individu"
                            android:layout_width="13dp"
                            android:layout_height="8dp"
                            android:src="@drawable/icon_people"
                            android:layout_gravity="center" />

                        <TextView
                            android:id="@+id/text_lomba_type"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Individu"
                            android:textColor="@color/white"
                            android:fontFamily="@font/is_r"
                            android:textSize="10sp" />
                    </LinearLayout>
                </LinearLayout>

                <!-- Title -->
                <TextView
                    android:id="@+id/text_judul_mendatang"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="SEMINAR NASIONAL EPIM 2025"
                    android:textColor="@color/white"
                    android:fontFamily="@font/is_sb"
                    android:textSize="14sp"
                    android:maxLines="2"
                    android:ellipsize="end"
                    android:layout_marginVertical="10dp" />

                <!-- Badges -->
                <LinearLayout
                    android:id="@+id/badge_container_mendatang"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginBottom="10dp">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:paddingVertical="4dp"
                        android:paddingHorizontal="8dp"
                        android:background="@drawable/badge_competition"
                        android:layout_marginEnd="10dp">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Infografis"
                            android:textColor="@color/white"
                            android:textSize="8sp"
                            android:fontFamily="@font/is_r" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:paddingVertical="4dp"
                        android:paddingHorizontal="8dp"
                        android:background="@drawable/badge_competition"
                        android:layout_marginEnd="10dp">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="UI/UX"
                            android:textColor="@color/white"
                            android:textSize="8sp"
                            android:fontFamily="@font/is_r" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:paddingVertical="4dp"
                        android:paddingHorizontal="8dp"
                        android:background="@drawable/badge_competition">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Web Development"
                            android:textColor="@color/white"
                            android:textSize="8sp"
                            android:fontFamily="@font/is_r" />
                    </LinearLayout>
                </LinearLayout>

                <!-- Date -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginBottom="8dp">

                    <ImageView
                        android:layout_width="11dp"
                        android:layout_height="10dp"
                        android:src="@drawable/icon_event"
                        android:layout_marginEnd="8dp"
                        android:layout_gravity="center_vertical" />

                    <TextView
                        android:id="@+id/text_tanggal_mendatang"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="wrap_content"
                        android:text="07 November 2025 - 22 November 2025"
                        android:textColor="#7FFFFFFF"
                        android:textSize="10sp"
                        android:fontFamily="@font/is_r"
                        android:maxLines="2"
                        android:ellipsize="end" />
                </LinearLayout>

                <!-- Location -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <ImageView
                        android:layout_width="11dp"
                        android:layout_height="10dp"
                        android:src="@drawable/icon_lokasi_abu"
                        android:layout_marginEnd="8dp"
                        android:layout_gravity="center_vertical" />

                    <TextView
                        android:id="@+id/text_lokasi_mendatang"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="wrap_content"
                        android:text="Online"
                        android:textColor="#7FFFFFFF"
                        android:textSize="10sp"
                        android:fontFamily="@font/is_r"
                        android:maxLines="2"
                        android:ellipsize="end" />
                </LinearLayout>

            </LinearLayout>

        </LinearLayout>
    </androidx.cardview.widget.CardView>

</LinearLayout>
