<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:clipToPadding="false"
    android:clipChildren="false"
    android:layout_gravity="end|bottom">

    <LinearLayout
        android:id="@+id/fabMenuHome"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="end"
        android:visibility="gone"
        app:layout_constraintBottom_toTopOf="@+id/btnAddContainer"
        app:layout_constraintEnd_toEndOf="parent"
        android:elevation="12dp"
        android:layout_marginBottom="16dp">

        <com.google.android.material.floatingactionbutton.FloatingActionButton
            android:id="@+id/btnForum"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="12dp"
            android:src="@drawable/icon_forum_welcome"
            android:contentDescription="Buat Forum"
            app:backgroundTint="#3B5CCC"
            app:maxImageSize="24dp"
            app:fabSize="normal" />

        <com.google.android.material.floatingactionbutton.FloatingActionButton
            android:id="@+id/btnTim"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="12dp"
            android:src="@drawable/icon_tim"
            android:contentDescription="Buat Tim"
            app:backgroundTint="#3B5CCC"
            app:maxImageSize="24dp"
            app:fabSize="normal" />

        <com.google.android.material.floatingactionbutton.FloatingActionButton
            android:id="@+id/btnPosting"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/icon_posting"
            android:contentDescription="Posting"
            app:backgroundTint="#3B5CCC"
            app:maxImageSize="24dp"
            app:fabSize="normal" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/btnAddContainer"
        android:layout_width="55dp"
        android:layout_height="55dp"
        android:gravity="center"
        android:orientation="horizontal"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginEnd="0dp"
        android:layout_marginBottom="10dp"
        android:background="@drawable/circle_dot_welcome"
        android:elevation="13dp"
        android:padding="15dp">

        <ImageView
            android:id="@+id/btnAdd"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/icon_add"
            android:contentDescription="Tambah" />
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
