<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#001136">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="330dp"
        android:gravity="center_horizontal"
        android:layout_marginBottom="37dp" >
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/opening_five"
            android:layout_gravity="bottom"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:orientation="vertical">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Masuk"
            android:fontFamily="@font/is_bold"
            android:textSize="24dp"
            android:textColor="@color/white"
            android:layout_marginBottom="23dp">
        </TextView>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Masuk  menggunakan Single Sign On Student (SSO
            Student)"
            android:gravity="center"
            android:textColor="@color/white"
            android:fontFamily="@font/is_r"/>
    </LinearLayout>
    
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:orientation="vertical"
        android:layout_marginTop="40dp">
        <EditText
            android:id="@+id/etEmail"
            android:inputType="textEmailAddress"
            android:layout_width="350dp"
            android:layout_height="60dp"
            android:paddingStart="12dp"
            android:textColor="@color/white"
            android:background="@drawable/custom_textifield"
            android:hint="Student Email"
            android:textColorHint="#80FFFFFF">
        </EditText>

        <EditText
            android:id="@+id/pwlogin"
            android:inputType="textPassword"
            android:layout_width="350dp"
            android:layout_height="60dp"
            android:paddingStart="12dp"
            android:paddingEnd="20dp"
            android:background="@drawable/custom_textifield"
            android:layout_marginTop="10dp"
            android:textColor="@color/white"
            android:hint="Kata Sandi"
            android:textColorHint="#80FFFFFF"
            android:drawableEnd="@drawable/close_eye"
            android:drawablePadding="12dp">
        </EditText>

        <TextView
            android:id="@+id/lupa_sandi"
            android:layout_width="390dp"
            android:layout_height="wrap_content"
            android:layout_marginRight="20dp"
            android:layout_marginTop="10dp"
            android:gravity="right"
            android:fontFamily="@font/is_sb"
            android:text="Lupa Kata Sandi?"
            android:textColor="#407BFF"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:layout_marginTop="50dp">
        <Button
            android:id="@+id/btn_mulai"
            android:layout_width="350dp"
            android:layout_height="60dp"
            android:background="@drawable/custom_button_rounded"
            android:text="MULAI"
            android:fontFamily="@font/is_bold"
            android:textSize="18dp"
            android:textColor="@color/white"/>
    </LinearLayout>

</LinearLayout>