<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#0A1124"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/header_container"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@android:color/transparent"
        android:orientation="horizontal"
        android:gravity="center_vertical">

        <ImageButton
            android:id="@+id/back_to_mainactivity"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:layout_margin="10dp"
            android:background="@android:color/transparent"
            android:src="@drawable/panah_kiri" />

        <View
            android:layout_width="0dp"
            android:layout_height="1dp"
            android:layout_weight="1" />

        <ImageButton
            android:id="@+id/flag"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:layout_margin="10dp"
            android:background="@android:color/transparent"
            android:src="@drawable/icon_lainnya" />

    </LinearLayout>

    <ScrollView
        android:id="@+id/scrollContent"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:fillViewport="true">

        <LinearLayout
            android:id="@+id/content_wrapper"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:id="@+id/container_filter"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:background="#0A1124"
                android:padding="20dp">

                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="150dp"
                    app:cardUseCompatPadding="true"
                    app:cardElevation="0dp"
                    app:cardBackgroundColor="@android:color/transparent">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="horizontal"
                        android:paddingVertical="12dp">

                        <!-- Kiri: Image Poster -->
                        <com.google.android.material.imageview.ShapeableImageView
                            android:id="@+id/img_poster"
                            android:layout_width="120dp"
                            android:layout_height="match_parent"
                            android:scaleType="centerCrop"
                            android:src="@drawable/tryposter"
                            android:contentDescription="Poster Event"
                            app:shapeAppearanceOverlay="@style/RoundedCornerImage"
                            android:layout_marginEnd="12dp"/>

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:orientation="vertical"
                            android:gravity="fill_vertical"> <!-- Fill space vertikal -->

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Diselenggarakan oleh :"
                                android:textColor="#B3FFFFFF"
                                android:textSize="14sp"
                                android:fontFamily="@font/is_r"
                                android:ellipsize="end"
                                android:maxLines="2" />

                            <TextView
                                android:id="@+id/title_event_card"
                                android:layout_width="match_parent"
                                android:layout_height="0dp"
                                android:layout_weight="1"
                                android:text="Nama Penyelenggara"
                                android:textColor="@color/white"
                                android:textSize="18sp"
                                android:fontFamily="@font/is_sb"
                                android:ellipsize="end"
                                android:maxLines="1"
                                android:gravity="top" />
                        </LinearLayout>

                    </LinearLayout>
                </androidx.cardview.widget.CardView>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginBottom="10dp"
                    android:gravity="center_vertical">

                    <TextView
                        android:id="@+id/Biaya"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Berbayar"
                        android:textAlignment="center"
                        android:textColor="@color/white"
                        android:fontFamily="@font/is_m"
                        android:textSize="14sp" />

                    <View
                        android:layout_width="2dp"
                        android:layout_height="match_parent"
                        android:background="@color/white"
                        android:layout_marginStart="8dp"
                        android:layout_marginEnd="8dp" />

                    <TextView
                        android:id="@+id/Scope"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Nasional"
                        android:textAlignment="center"
                        android:textColor="@color/white"
                        android:fontFamily="@font/is_m"
                        android:textSize="14sp" />

                    <View
                        android:layout_width="2dp"
                        android:layout_height="match_parent"
                        android:background="@color/white"
                        android:layout_marginStart="8dp"
                        android:layout_marginEnd="8dp" />

                    <TextView
                        android:id="@+id/lombaType"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Individu"
                        android:textAlignment="center"
                        android:textColor="@color/white"
                        android:fontFamily="@font/is_m"
                        android:textSize="14sp"/>
                </LinearLayout>

                <TextView
                    android:id="@+id/title_event"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="NATIONAL POSTER COMPETITION"
                    android:textColor="@color/white"
                    android:fontFamily="@font/is_bold"
                    android:textSize="18sp" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                    <LinearLayout
                        android:id="@+id/iniscope"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@drawable/badge_blue"
                        android:paddingHorizontal="10dp"
                        android:paddingVertical="10dp"
                        android:layout_marginTop="10dp"
                        android:layout_marginRight="5dp">
                        <TextView
                            android:id="@+id/badge_text"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="ini scope"
                            android:fontFamily="@font/is_r"
                            android:textSize="8sp"
                            android:textColor="@color/white" />
                    </LinearLayout>
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/date_segment"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"
                    android:orientation="horizontal"
                    android:gravity="center_vertical">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:padding="15dp"
                        android:background="@drawable/rounded_detail_event">

                        <ImageView
                            android:layout_width="25dp"
                            android:layout_height="25dp"
                            android:src="@drawable/icon_event_selected" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:layout_marginLeft="12dp"
                        android:gravity="center_vertical">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Tanggal Lomba"
                            android:textColor="#80FFFFFF"
                            android:textSize="14sp"
                            android:fontFamily="@font/is_sb" />

                        <TextView
                            android:id="@+id/initanggallomba"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="2dp"
                            android:text="Sabtu, 22 November 2025"
                            android:textColor="@color/white"
                            android:textSize="16sp"
                            android:fontFamily="@font/is_sb" />
                    </LinearLayout>

                </LinearLayout>


                <LinearLayout
                    android:id="@+id/place_segment"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:orientation="horizontal"
                    android:gravity="center_vertical">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:padding="15dp"
                        android:background="@drawable/rounded_detail_event">

                        <ImageView
                            android:layout_width="25dp"
                            android:layout_height="25dp"
                            android:src="@drawable/icon_lokasi" />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:layout_marginLeft="12dp"
                        android:gravity="center_vertical">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Lokasi Lomba"
                            android:textColor="#80FFFFFF"
                            android:textSize="14sp"
                            android:fontFamily="@font/is_sb" />

                        <TextView
                            android:id="@+id/ini"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Politeknik Negeri Jember"
                            android:textColor="@color/white"
                            android:textSize="16sp"
                            android:fontFamily="@font/is_sb" />

                    </LinearLayout>

                </LinearLayout>


                <LinearLayout
                    android:id="@+id/price_segment"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:orientation="horizontal"
                    android:gravity="center_vertical">

                    <!-- Icon -->
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:padding="15dp"
                        android:background="@drawable/rounded_detail_event">

                        <ImageView
                            android:layout_width="25dp"
                            android:layout_height="25dp"
                            android:src="@drawable/icon_dolar" />

                    </LinearLayout>

                    <!-- Teks Harga -->
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:layout_marginLeft="12dp"
                        android:gravity="center_vertical">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Harga Lomba"
                            android:textColor="#80FFFFFF"
                            android:textSize="14sp"
                            android:fontFamily="@font/is_sb" />

                        <TextView
                            android:id="@+id/iniHargaLomba"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Rp. 80.000"
                            android:textColor="@color/white"
                            android:textSize="16sp"
                            android:fontFamily="@font/is_sb" />

                    </LinearLayout>

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/limit_register_fragment"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:orientation="horizontal"
                    android:gravity="center_vertical">

                    <!-- Icon Hadiah -->
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:padding="15dp"
                        android:background="@drawable/rounded_detail_event">

                        <ImageView
                            android:layout_width="25dp"
                            android:layout_height="25dp"
                            android:src="@drawable/icon_hadiah" />

                    </LinearLayout>

                    <!-- Teks Hadiah -->
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:layout_marginLeft="12dp"
                        android:gravity="center_vertical">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Hadiah Lomba"
                            android:textColor="#80FFFFFF"
                            android:textSize="14sp"
                            android:fontFamily="@font/is_sb" />

                        <TextView
                            android:id="@+id/iniHadiah"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Sertifikat, Tunai, dan Hadiah menarik Lainnya"
                            android:textColor="@color/white"
                            android:textSize="16sp"
                            android:fontFamily="@font/is_sb" />

                    </LinearLayout>

                </LinearLayout>


                <TextView
                    android:id="@+id/content_event"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"
                    android:text="@string/aom_description"
                    android:textColor="@color/white"
                    android:textSize="14sp"
                    android:fontFamily="@font/is_r" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"
                    android:orientation="vertical">

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:background="#40FFFFFF" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginVertical="8dp"
                        android:orientation="horizontal">

                        <com.google.android.material.imageview.ShapeableImageView
                            android:layout_width="35dp"
                            android:layout_height="35dp"
                            android:src="@drawable/profile_coba" />

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="10dp"
                            android:orientation="vertical">

                            <TextView
                                android:id="@+id/username"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="qiuqiu"
                                android:textColor="@color/white"
                                android:textSize="12sp"
                                android:fontFamily="@font/is_r" />

                            <TextView
                                android:id="@+id/inicreatedat"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="23 September 2025"
                                android:textColor="#7FFFFFFF"
                                android:textSize="10sp"
                                android:fontFamily="@font/is_r" />

                        </LinearLayout>

                    </LinearLayout>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:background="#40FFFFFF" />

                </LinearLayout>

            </LinearLayout>
        </LinearLayout>

    </ScrollView>
    <LinearLayout
        android:id="@+id/register_segment"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="@color/primary_color"
        android:padding="15dp">

        <LinearLayout
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:background="@drawable/rounded_detail_event"
            android:gravity="center"
            android:layout_marginRight="10dp">

            <ImageView
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:src="@drawable/icon_like" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/custom_button_rounded"
            android:padding="12dp"
            android:orientation="horizontal"
            android:gravity="center_vertical">

            <TextView
                android:id="@+id/text_daftar"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Daftar Sekarang"
                android:textColor="@color/white"
                android:textSize="16sp"
                android:fontFamily="@font/is_sb" />

            <View
                android:layout_width="0dp"
                android:layout_height="1dp"
                android:layout_weight="1" />

            <ImageView
                android:id="@+id/arrow_icon"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/panah_kanan" />

        </LinearLayout>

    </LinearLayout>

</LinearLayout>