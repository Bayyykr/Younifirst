<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:custom="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#0A1124"
    android:paddingTop="20dp">

    <!-- BAGIAN ATAS: header -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:layout_margin="10dp">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:src="@drawable/panah_kiri"
            android:padding="8dp"
            android:clickable="true"
            android:focusable="true"
            android:contentDescription="Kembali" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="Profil Akun"
            android:gravity="center"
            android:textColor="@color/white"
            android:textSize="18sp"
            android:fontFamily="@font/is_sb" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:src="@drawable/icon_kamera_hitam"
            android:padding="8dp"
            android:clickable="true"
            android:focusable="true"
            android:contentDescription="Kamera" />
    </LinearLayout>

    <!-- BAGIAN FOTO PROFIL -->
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_margin="10dp">

        <FrameLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center">

            <com.google.android.material.imageview.ShapeableImageView
                android:id="@+id/img_profile"
                android:layout_width="85dp"
                android:layout_height="85dp"
                android:src="@drawable/profile_coba"
                android:contentDescription="Foto profil"
                android:scaleType="centerCrop" />

            <ImageView
                android:id="@+id/icon_camera"
                android:layout_width="28dp"
                android:layout_height="28dp"
                android:src="@drawable/icon_kamera_hitam"
                android:layout_gravity="bottom|end"
                android:background="@drawable/circle_dot"
                android:padding="4dp"
                android:elevation="4dp"
                android:layout_margin="2dp" />
        </FrameLayout>
    </FrameLayout>
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:layout_weight="1"
        android:fillViewport="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">

            <com.naufal.younifirst.custom.CustomEditText
                android:id="@+id/et_username"
                android:layout_width="match_parent"
                android:layout_height="56dp"
                android:layout_marginBottom="16dp"
                android:paddingStart="12dp"
                android:paddingEnd="12dp"/>

            <com.naufal.younifirst.custom.CustomEditText
                android:id="@+id/et_NamaLengkap"
                android:layout_width="match_parent"
                android:layout_height="56dp"
                android:layout_marginBottom="16dp" />

            <com.naufal.younifirst.custom.CustomEditText
                android:id="@+id/et_Angkatan"
                android:layout_width="match_parent"
                android:layout_height="56dp"
                android:layout_marginBottom="16dp" />

            <com.naufal.younifirst.custom.CustomEditText
                android:id="@+id/et_StudentEmail"
                android:layout_width="match_parent"
                android:layout_height="56dp"
                android:layout_marginBottom="16dp"/>

            <com.naufal.younifirst.custom.CustomEditText
                android:id="@+id/et_NIM"
                android:layout_width="match_parent"
                android:layout_height="56dp"
                android:layout_marginBottom="16dp" />

            <com.naufal.younifirst.custom.CustomEditText
                android:id="@+id/et_JenisKelamin"
                android:layout_width="match_parent"
                android:layout_height="56dp"
                android:layout_marginBottom="16dp" />

            <com.naufal.younifirst.custom.CustomEditText
                android:id="@+id/et_TanggalLahir"
                android:layout_width="match_parent"
                android:layout_height="56dp"
                android:layout_marginBottom="16dp" />

            <com.naufal.younifirst.custom.CustomEditText
                android:id="@+id/et_Alamat"
                android:layout_width="match_parent"
                android:layout_height="56dp"
                android:layout_marginBottom="16dp" />
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <Button
                    android:layout_width="170dp"
                    android:layout_height="56dp"
                    android:layout_weight="1"
                    android:background="@drawable/custom_button_rounded_border"
                    android:text="Batal"
                    android:fontFamily="@font/is_bold"
                    android:textSize="18dp"
                    android:textColor="@color/white"
                    android:textAllCaps="false" />
                <View
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_weight="1" />
                <Button
                    android:layout_width="170dp"
                    android:layout_height="56dp"
                    android:layout_weight="1"
                    android:background="@drawable/custom_button_rounded"
                    android:text="Simpan"
                    android:fontFamily="@font/is_bold"
                    android:textSize="18dp"
                    android:textColor="@color/white"
                    android:textAllCaps="false" />
            </LinearLayout>

        </LinearLayout>
    </ScrollView>


</LinearLayout>
