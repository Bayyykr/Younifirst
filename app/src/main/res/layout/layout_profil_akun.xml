<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#0A1124"
    android:paddingTop="20dp">

    <LinearLayout
        android:id="@+id/header_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:layout_margin="10dp"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:id="@+id/back_to_setting"
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:src="@drawable/panah_kiri"
            android:padding="8dp"
            android:clickable="true"
            android:focusable="true" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="Profil Akun"
            android:gravity="center"
            android:textColor="@color/white"
            android:textSize="18sp"
            android:fontFamily="@font/is_sb" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:src="@drawable/icon_kamera_hitam"
            android:padding="8dp" />
    </LinearLayout>

    <FrameLayout
        android:id="@+id/profile_image_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        app:layout_constraintTop_toBottomOf="@id/header_container">

        <FrameLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center">

            <com.google.android.material.imageview.ShapeableImageView
                android:id="@+id/img_profile"
                android:layout_width="85dp"
                android:layout_height="85dp"
                android:src="@drawable/profile_coba"
                android:contentDescription="Foto profil"
                android:scaleType="centerCrop" />

            <ImageView
                android:id="@+id/icon_camera"
                android:layout_width="28dp"
                android:layout_height="28dp"
                android:src="@drawable/icon_kamera_hitam"
                android:layout_gravity="bottom|end"
                android:background="@drawable/circle_dot"
                android:padding="4dp"
                android:elevation="4dp"
                android:layout_margin="2dp" />
        </FrameLayout>
    </FrameLayout>

    <ScrollView
        android:id="@+id/scroll_content"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:fillViewport="true"
        app:layout_constraintTop_toBottomOf="@id/profile_image_container"
        app:layout_constraintBottom_toTopOf="@id/buttonContainer"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">

            <com.naufal.younifirst.custom.CustomEditText
                android:id="@+id/et_username"
                android:layout_width="match_parent"
                android:layout_height="56dp"
                android:layout_marginBottom="16dp"/>

            <com.naufal.younifirst.custom.CustomEditText
                android:id="@+id/et_NamaLengkap"
                android:layout_width="match_parent"
                android:layout_height="56dp"
                android:layout_marginBottom="16dp"/>

            <com.naufal.younifirst.custom.CustomEditText
                android:id="@+id/et_Angkatan"
                android:layout_width="match_parent"
                android:layout_height="56dp"
                android:layout_marginBottom="16dp"/>

            <com.naufal.younifirst.custom.CustomEditText
                android:id="@+id/et_StudentEmail"
                android:layout_width="match_parent"
                android:layout_height="56dp"
                android:layout_marginBottom="16dp"/>

            <com.naufal.younifirst.custom.CustomEditText
                android:id="@+id/et_NIM"
                android:layout_width="match_parent"
                android:layout_height="56dp"
                android:layout_marginBottom="16dp"/>

            <com.naufal.younifirst.custom.CustomEditText
                android:id="@+id/et_JenisKelamin"
                android:layout_width="match_parent"
                android:layout_height="56dp"
                android:layout_marginBottom="16dp"/>

            <com.naufal.younifirst.custom.CustomEditText
                android:id="@+id/et_TanggalLahir"
                android:layout_width="match_parent"
                android:layout_height="56dp"
                android:layout_marginBottom="16dp"/>

            <com.naufal.younifirst.custom.CustomEditText
                android:id="@+id/et_Alamat"
                android:layout_width="match_parent"
                android:layout_height="56dp"
                android:layout_marginBottom="16dp"/>
        </LinearLayout>
    </ScrollView>
    <LinearLayout
        android:id="@+id/buttonContainer"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:visibility="gone"
        android:padding="16dp"
        android:layout_marginBottom="10dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <Button
            android:id="@+id/btnBatal"
            android:layout_width="0dp"
            android:layout_height="56dp"
            android:layout_weight="1"
            android:background="@drawable/custom_button_rounded_border"
            android:text="Batal"
            android:fontFamily="@font/is_bold"
            android:textSize="18sp"
            android:textColor="@color/white"
            android:textAllCaps="false" />

        <View
            android:layout_width="20dp"
            android:layout_height="match_parent" />

        <Button
            android:id="@+id/btnSimpan"
            android:layout_width="0dp"
            android:layout_height="56dp"
            android:layout_weight="1"
            android:background="@drawable/custom_button_rounded"
            android:text="Simpan"
            android:fontFamily="@font/is_bold"
            android:textSize="18sp"
            android:textColor="@color/white"
            android:textAllCaps="false" />
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
