<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/item_pengumuman"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:background="@drawable/asset_background_list_item"
    android:padding="20dp"
    android:gravity="center_vertical">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingHorizontal="10dp">

        <LinearLayout
            android:id="@+id/tvReport"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center_vertical"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent">

            <TextView
                android:id="@+id/editforum"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Edit Forum"
                android:textSize="16sp"
                android:textColor="@color/white"
                android:fontFamily="@font/is_m" />

            <TextView
                android:id="@+id/undanganggota"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Undang Anggota"
                android:textSize="16sp"
                android:textColor="@color/white"
                android:layout_marginTop="20dp"
                android:fontFamily="@font/is_m" />

            <TextView
                android:id="@+id/pengaturanforum"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Pengaturan Forum"
                android:textSize="16sp"
                android:textColor="@color/white"
                android:layout_marginTop="20dp"
                android:fontFamily="@font/is_m" />

        </LinearLayout>
    </androidx.constraintlayout.widget.ConstraintLayout>

</LinearLayout>
