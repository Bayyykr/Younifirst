<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/item_chat_bubble"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="@drawable/custom_chat_forum"
    android:padding="10dp"
    android:layout_marginBottom="8dp"
    android:layout_marginStart="8dp">

    <!-- Header -->
    <LinearLayout
        android:id="@+id/chat_bubble_header"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginBottom="4dp"
        android:gravity="center_vertical">

        <ImageView
            android:id="@+id/chat_bubble_avatar"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_gravity="start|center_vertical"
            android:src="@drawable/gambar_profil"
            android:background="@drawable/rounded_image"
            android:clipToOutline="true"
            android:contentDescription="Avatar"
            android:layout_marginEnd="6dp" />

        <LinearLayout
            android:id="@+id/chat_bubble_sub"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center_vertical">

            <TextView
                android:id="@+id/chat_bubble_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Ocean"
                android:textColor="@color/white"
                android:textSize="16sp"
                android:fontFamily="@font/is_m" />

            <TextView
                android:id="@+id/chat_bubble_role"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Admin Forum"
                android:textColor="#50ffffff"
                android:textSize="14sp"
                android:fontFamily="@font/is_r" />
        </LinearLayout>
    </LinearLayout>
    <TextView
        android:id="@+id/chat_bubble_message"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Ada yang punya materi kjk?"
        android:textColor="@color/white"
        android:textSize="14sp"
        android:fontFamily="@font/is_r" />

    <TextView
        android:id="@+id/chat_bubble_time"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="10:45"
        android:textColor="#A3A3A3"
        android:gravity="end"
        android:textSize="10sp"
        android:fontFamily="@font/is_r"
        android:layout_marginTop="4dp" />
</LinearLayout>
