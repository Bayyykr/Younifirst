<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/container_competition_list"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#0A1124"
    android:padding="5dp">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="116dp"
        app:cardCornerRadius="16dp"
        app:cardUseCompatPadding="false"
        android:clipToOutline="true"
        app:cardElevation="0dp"
        android:background="@drawable/asset_background_list_item"
        app:cardBackgroundColor="#121A2C">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:padding="10dp">

            <!-- POSTER -->
            <androidx.cardview.widget.CardView
                android:id="@+id/img_poster_list"
                android:layout_width="80dp"
                android:layout_height="match_parent"
                app:cardCornerRadius="10dp"
                app:cardUseCompatPadding="false"
                app:cardElevation="0dp"
                android:clipToOutline="true">

                <ImageView
                    android:id="@+id/poster_lomba"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:scaleType="centerCrop"
                    android:src="@drawable/tryposter" />
            </androidx.cardview.widget.CardView>

            <!-- TEXT CONTENT -->
            <LinearLayout
                android:id="@+id/text_container_list"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:orientation="vertical"
                android:paddingStart="10dp"
                android:gravity="center_vertical">

                <!-- STATUS -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/text_biaya"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Berbayar"
                            android:textColor="@color/white"
                            android:textSize="9sp"
                            android:fontFamily="@font/is_r" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text=" â€¢ "
                            android:textColor="@color/white"
                            android:textSize="9sp"
                            android:fontFamily="@font/is_r" />

                        <TextView
                            android:id="@+id/text_scope"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Nasional"
                            android:textColor="@color/white"
                            android:textSize="9sp"
                            android:fontFamily="@font/is_r" />
                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/layout_participant_list"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="end">

                        <ImageView
                            android:id="@+id/icon_lomba_type_kelompok"
                            android:layout_width="11dp"
                            android:layout_height="8dp"
                            android:src="@drawable/icon_orang"
                            android:layout_gravity="center"/>
                        <ImageView
                            android:id="@+id/icon_lomba_type_individu"
                            android:layout_width="11dp"
                            android:layout_height="8dp"
                            android:src="@drawable/icon_people"
                            android:layout_gravity="center"/>

                        <TextView
                            android:id="@+id/text_lomba_type"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="individu"
                            android:textColor="@color/white"
                            android:textSize="9sp"
                            android:fontFamily="@font/is_r" />

                    </LinearLayout>
                </LinearLayout>

                <!-- JUDUL -->
                <TextView
                    android:id="@+id/text_judul_list"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="SEMINAR NASIONAL EPIM 2025"
                    android:textColor="@color/white"
                    android:textSize="12sp"
                    android:maxLines="1"
                    android:ellipsize="end"
                    android:fontFamily="@font/is_sb"
                    android:layout_marginVertical="4dp" />

                <!-- BADGES -->
                <LinearLayout
                    android:id="@+id/badge_container_list"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginBottom="5dp">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@drawable/badge_competition"
                        android:layout_marginEnd="6dp"
                        android:paddingVertical="2dp"
                        android:paddingHorizontal="6dp"
                        android:gravity="center_vertical">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Infografis"
                            android:textColor="@color/white"
                            android:textSize="7sp"
                            android:fontFamily="@font/is_r"
                            android:includeFontPadding="false" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@drawable/badge_competition"
                        android:layout_marginEnd="6dp"
                        android:paddingVertical="2dp"
                        android:paddingHorizontal="6dp"
                        android:gravity="center_vertical">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="UI/UX"
                            android:textColor="@color/white"
                            android:textSize="7sp"
                            android:fontFamily="@font/is_r"
                            android:includeFontPadding="false" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@drawable/badge_competition"
                        android:paddingVertical="2dp"
                        android:paddingHorizontal="6dp"
                        android:gravity="center_vertical">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Web Dev"
                            android:textColor="@color/white"
                            android:textSize="7sp"
                            android:fontFamily="@font/is_r"
                            android:includeFontPadding="false" />
                    </LinearLayout>
                </LinearLayout>

                <!-- TANGGAL -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginBottom="5dp">

                    <ImageView
                        android:layout_width="11dp"
                        android:layout_height="10dp"
                        android:src="@drawable/icon_event"
                        android:layout_marginEnd="6dp" />

                    <TextView
                        android:id="@+id/text_tanggal_list"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="wrap_content"
                        android:text="07 Nov 2025 - 22 Nov 2025"
                        android:textColor="#7FFFFFFF"
                        android:textSize="9sp"
                        android:maxLines="1"
                        android:ellipsize="end"
                        android:fontFamily="@font/is_r" />
                </LinearLayout>

                <!-- LOKASI -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <ImageView
                        android:layout_width="11dp"
                        android:layout_height="10dp"
                        android:src="@drawable/icon_lokasi_abu"
                        android:layout_marginEnd="6dp" />

                    <TextView
                        android:id="@+id/text_lokasi_list"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="wrap_content"
                        android:text="Online"
                        android:textColor="#7FFFFFFF"
                        android:textSize="9sp"
                        android:maxLines="1"
                        android:ellipsize="end"
                        android:fontFamily="@font/is_r" />
                </LinearLayout>

            </LinearLayout>

        </LinearLayout>

    </androidx.cardview.widget.CardView>
</LinearLayout>
