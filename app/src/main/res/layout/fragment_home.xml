<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#001136"
    tools:context=".Home.HomeFragment">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingBottom="20dp">

            <!-- Welcome Section -->
            <FrameLayout
                android:id="@+id/welcomeContainer"
                android:layout_width="357dp"
                android:layout_height="186dp"
                android:layout_marginTop="5dp"
                android:layout_marginHorizontal="16dp"
                android:layout_gravity="center_horizontal"
                android:background="@drawable/welcome_asset_dashboard"
                android:clipChildren="true"
                android:clipToOutline="true"
                android:clipToPadding="true">

                <View
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@drawable/welcome_bg"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@drawable/welcome_asset_dashboard"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:orientation="vertical"
                        android:padding="13dp">

                        <TextView
                            android:id="@+id/tvWelcomeMessage"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="7dp"
                            android:fontFamily="@font/is_bold"
                            android:text="Selamat datang Test0206!"
                            android:textColor="@color/white"
                            android:textSize="18sp"/>

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="33dp"
                            android:fontFamily="@font/is_bold"
                            android:text="Saatnya terhubung dan seru-seruan bareng teman kampus di YouniFirst ðŸ’«"
                            android:textColor="@color/white"
                            android:textSize="14sp"/>
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:padding="10dp">

                        <ImageView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:background="@drawable/welcome_char"/>
                    </LinearLayout>
                </LinearLayout>
            </FrameLayout>

            <!-- Container untuk Postingan Lost & Found -->
            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/containerPostingan"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:layout_marginHorizontal="16dp"
                android:visibility="gone">

                <!-- Title Section -->
                <TextView
                    android:id="@+id/tvSectionTitle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="12dp"
                    android:fontFamily="@font/is_sb"
                    android:text="Postingan Terbaru"
                    android:textColor="@color/white"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"/>

                <!-- Postingan Item -->
                <LinearLayout
                    android:id="@+id/postinganItem"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:background="@drawable/asset_background_list_item"
                    android:orientation="vertical"
                    android:padding="12dp"
                    app:layout_constraintTop_toBottomOf="@id/tvSectionTitle">

                    <!-- User Info -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center_vertical"
                        android:orientation="horizontal">

                        <ImageView
                            android:id="@+id/iv_user_image"
                            android:layout_width="35dp"
                            android:layout_height="35dp"
                            android:contentDescription="Foto profil"
                            android:src="@drawable/profile_coba"/>

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="10dp"
                            android:layout_weight="1"
                            android:orientation="vertical">

                            <TextView
                                android:id="@+id/tv_user_name"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:fontFamily="@font/is_m"
                                android:text="Elliot"
                                android:textColor="@color/white"
                                android:textSize="15sp"
                                android:textStyle="bold"/>

                            <TextView
                                android:id="@+id/tv_time_ago"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="1 hari lalu"
                                android:textColor="#858891"
                                android:textSize="12sp"/>
                        </LinearLayout>

                        <Button
                            android:id="@+id/btn_status"
                            android:layout_width="85dp"
                            android:layout_height="25dp"
                            android:background="@drawable/custom_button_rounded_corner_putih"
                            android:fontFamily="@font/is_r"
                            android:padding="5dp"
                            android:text="Menemukan"
                            android:textAllCaps="false"
                            android:textColor="@color/white"
                            android:textSize="12dp"/>

                        <ImageButton
                            android:id="@+id/btn_more"
                            android:layout_width="25dp"
                            android:layout_height="25dp"
                            android:background="@android:color/transparent"
                            android:contentDescription="Menu lainnya"
                            android:src="@drawable/icon_lainnya"/>
                    </LinearLayout>

                    <!-- Item Image -->
                    <ImageView
                        android:id="@+id/iv_item_image"
                        android:layout_width="match_parent"
                        android:layout_height="200dp"
                        android:layout_marginTop="10dp"
                        android:contentDescription="Gambar barang"
                        android:scaleType="centerCrop"
                        android:src="@drawable/gambar_lostandfound"/>

                    <!-- Location -->
                    <LinearLayout
                        android:id="@+id/layout_location"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:drawablePadding="5dp"
                            android:drawableStart="@drawable/icon_lokasi"
                            android:text="Lokasi:"
                            android:textColor="#80FFFFFF"
                            android:textSize="14sp"/>

                        <TextView
                            android:id="@+id/tv_location"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="5dp"
                            android:text="Ruang 3.3 JTI"
                            android:textColor="#5E8BFF"
                            android:textSize="14sp"/>
                    </LinearLayout>

                    <!-- Description dengan ellipsis seperti Instagram -->
                    <TextView
                        android:id="@+id/tv_description"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:ellipsize="end"
                        android:fontFamily="@font/is_sb"
                        android:linksClickable="true"
                        android:maxLines="3"
                        android:textColor="@color/white"
                        android:textSize="14sp"/>

                    <!-- Likes, Comments, Share -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:gravity="center_vertical"
                        android:orientation="horizontal">

                        <View
                            android:layout_width="0dp"
                            android:layout_height="0dp"
                            android:layout_weight="1"/>

                        <!-- Share -->
                        <ImageView
                            android:id="@+id/btn_share"
                            android:layout_width="18dp"
                            android:layout_height="18dp"
                            android:clickable="true"
                            android:contentDescription="Bagikan"
                            android:focusable="true"
                            android:src="@drawable/icon_share"/>
                    </LinearLayout>
                </LinearLayout>

            </androidx.constraintlayout.widget.ConstraintLayout>

            <!-- Empty State Lost & Found -->
            <TextView
                android:id="@+id/tvEmptyState"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="50dp"
                android:text="Belum ada postingan Lost dan Found"
                android:textColor="#858891"
                android:textSize="14sp"
                android:visibility="gone"/>

            <!-- Section Event Mendatang -->
            <TextView
                android:id="@+id/tvEventSectionTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="30dp"
                android:layout_marginStart="16dp"
                android:layout_marginBottom="10dp"
                android:fontFamily="@font/is_sb"
                android:text="Event Mendatang"
                android:textColor="@color/white"
                android:textSize="18sp"
                android:textStyle="bold"
                android:visibility="gone"/>

            <!-- Horizontal Scroll untuk Event Cards -->
            <HorizontalScrollView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="20dp"
                android:scrollbars="none">

                <LinearLayout
                    android:id="@+id/containerEvents"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:paddingStart="16dp"
                    android:paddingEnd="16dp"/>

            </HorizontalScrollView>

            <!-- Empty State Event -->
            <TextView
                android:id="@+id/tvEventEmptyState"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="30dp"
                android:text="Tidak ada event mendatang"
                android:textColor="#858891"
                android:textSize="14sp"
                android:visibility="gone"/>

        </LinearLayout>
    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>