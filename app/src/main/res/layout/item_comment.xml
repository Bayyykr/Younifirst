<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="@drawable/custom_transparant_tipis_rounded"
    android:padding="10dp"
    android:layout_marginBottom="15dp"
    android:layout_marginStart="15dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginBottom="4dp"
        android:gravity="center_vertical">

        <ImageView
            android:id="@+id/comment_avatar"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@drawable/gambar_profil"
            android:background="@drawable/rounded_image"
            android:clipToOutline="true"
            android:contentDescription="Avatar"
            android:layout_marginEnd="6dp" />

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:gravity="center_vertical">

            <TextView
                android:id="@+id/comment_username"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Elliot"
                android:textColor="@color/white"
                android:textSize="16sp"
                android:fontFamily="@font/is_m" />

            <TextView
                android:id="@+id/comment_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="9 jam lalu"
                android:textColor="#50ffffff"
                android:textSize="14sp"
                android:fontFamily="@font/is_r" />
        </LinearLayout>

        <ImageView
            android:id="@+id/comment_options"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:src="@drawable/icon_lainnya"
            android:layout_marginStart="8dp" />
    </LinearLayout>

    <TextView
        android:id="@+id/comment_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Nah ini yang gua cari brayy!!"
        android:textColor="@color/white"
        android:textSize="14sp"
        android:fontFamily="@font/is_r" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:layout_marginTop="10dp">

        <ImageView
            android:id="@+id/comment_like_icon"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:src="@drawable/icon_like" />

        <TextView
            android:id="@+id/comment_like_count"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="0"
            android:textColor="#FFFFFF"
            android:layout_marginStart="5dp"
            android:textSize="14sp"
            android:fontFamily="@font/is_r" />

        <ImageView
            android:id="@+id/comment_reply_icon"
            android:layout_width="20dp"
            android:layout_marginLeft="10dp"
            android:layout_height="20dp"
            android:src="@drawable/icon_comment" />

        <TextView
            android:id="@+id/comment_reply_count"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="0"
            android:textColor="#FFFFFF"
            android:layout_marginStart="5dp"
            android:textSize="14sp"
            android:fontFamily="@font/is_r" />

        <View
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_weight="1" />

        <ImageView
            android:id="@+id/comment_share_icon"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:src="@drawable/icon_share" />
    </LinearLayout>

</LinearLayout>
