<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="CircularImage">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">50%</item>
    </style>
    <style name="BottomSheetDialogTheme" parent="Theme.Design.Light.BottomSheetDialog">
        <item name="android:background">@android:color/transparent</item>
    </style>
    <style name="EditTextLowerUnderline" parent="Widget.AppCompat.EditText">
        <item name="android:backgroundTint">#80FFFFFF</item>
        <item name="android:paddingBottom">100dp</item>
    </style>
    <style name="CustomDialogTheme" parent="Theme.AppCompat.Light.Dialog">
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:backgroundDimEnabled">true</item>
        <item name="android:backgroundDimAmount">0.5</item>
    </style>
    <style name="DialogAnimation">
        <item name="android:windowEnterAnimation">@anim/dialog_enter</item>
        <item name="android:windowExitAnimation">@anim/dialog_exit</item>
    </style>
</resources>