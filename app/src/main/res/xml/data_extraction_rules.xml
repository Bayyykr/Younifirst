<?xml version="1.0" encoding="utf-8"?>
<data-extraction-rules>
    <cloud-backup>
        <!-- Include user data for backup -->
        <include domain="sharedpref" path="."/>
        <include domain="file" path="user_session_data.xml"/>
        <include domain="file" path="cookies_backup.json"/>
    </cloud-backup>
    <device-transfer>
        <!-- Include everything for device transfer -->
        <include domain="sharedpref" path="."/>
        <include domain="file" path="."/>
    </device-transfer>
</data-extraction-rules>